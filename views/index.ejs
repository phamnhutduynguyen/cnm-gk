<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sach Linh Kien</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h3>Them Linh Kien</h3>
        <form action="/add" method="POST">
            <label>ID</label>
            <input type="text" name="id" class="form-control" required/>
            <label>Ten Linh Kien</label>
            <input type="text" name="ten" class="form-control" required/>
            <label>Don Vi Tinh</label>
            <input type="text" name="donvitinh" class="form-control" pattern="^[0-9]{0,}$" required/>
            <label>Don Gia</label>
            <input type="text" name="dongia" class="form-control" pattern="^[0-9]{0,}$" required/>
            <label>Thong So Ky Thuat</label>
            <input type="text" name="thongso" class="form-control" required/>
            <button type="submit" class="btn btn-success">Them</button>
        </form>
        <h3>Danh Sach Linh Kien</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ten</th>
                    <th>Don Vi Tinh</th>
                    <th>Don Gia</th>
                    <th>Thanh Tien</th>
                    <th>Thong So</th>
                    <th>Cap Nhat</th>
                    <th>Xoa</th>
                </tr>
            </thead>
            <% var tong=0 %>
            <tbody>
                <% items.forEach(function(item){ %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.ten %></td>
                    <td><%= item.donvitinh %></td>
                    <td><%= item.dongia %></td>
                    <td><%= item.dongia * item.donvitinh %></td>
                    <% tong += item.dongia * item.donvitinh %>
                    <td><%= item.thongso %></td>
                    <td><a href="/update/<%= item.id %>">Cap Nhat</a></td>
                    <td><a href="/delete/<%= item.id %>">Xoa</a></td>
                </tr>
                <% }) %>
                <tr>
                    <td colspan="4">Tong</td>
                    <td><%=tong %></td>
                    <td colspan="2"></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>

</html>